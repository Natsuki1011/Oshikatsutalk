<h1>Oshikatsutalk</h1>
<h3>Tweet詳細</h3>
<div class="tweet">
  <p><%= @tweet.body %></p>
  <p><%= @tweet.created_at %></p>
    <% if user_signed_in? %>
      <% if current_user.already_liked?(@tweet) %>
        <%= link_to tweet_like_path(@tweet), method: :delete do %>
          <i class="fas fa-heart"></i><%= @tweet.likes.count %>
        <% end %>
      <% else %>
        <%= link_to tweet_likes_path(@tweet), method: :post do %>
         <i class="far fa-heart"></i>
        　<span><%= @tweet.likes.count %></span>
        <% end %>
      <% end %>
    <% else %>
     <i class="far fa-heart"></i><%= @tweet.likes.count %>
      <p>いいねの数 = </p><%= @tweet.likes.count %>
    <% end %>
</div>

<h2>いいねしたユーザー</h2>
<% @tweet.liked_users.each do |user| %>
  <li>
   <%= link_to user.name, user_path(user) %>
  </li>
<% end %>
<div class="comment-wrapper">
<h2>コメント一覧</h2>
  <div class="comment-list">
   <% @comments.each do |c| %>
    <div class="comment-row <%= 'my-comment-row' if c.user == current_user %>">
    
    <div class="comment-avatar">
      <% if c.user.image.attached? %>
        <%= image_tag c.user.image, class: "avatar" %>
      <% else %>
       <%= image_tag "default_icon.png", class: "avatar" %>
      <% end %>
    </div>
    
    <div class="comment-box <%= 'my-comment' if c.user == current_user %>">
          <div class="comment-name">
           <%= link_to c.user.name, user_path(c.user) %>
          </div>
          <div class="comment-content">
            <%= c.content %>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>
<% @tweet.tags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>
<br>
<br>
<%= link_to "Tweet一覧に戻る", tweets_path %>
