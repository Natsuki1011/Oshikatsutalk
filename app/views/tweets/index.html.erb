<%= stylesheet_link_tag 'index', :media => "all" %>
<div class="tweets-container">
<h3>oshikatsu一覧</h3>
  <% if user_signed_in? %>
   <%= link_to "マイページへ", user_path(current_user.id) %>
 <% end %>
     <% @tweets.each do |t| %>
      <div class="tweet">
       <div class="main-box">
        <div class="left-container"><%= t.body %></div>
        <div class="right-container">
        
        <%= link_to t.user.name, user_path(t.user.id) %> 
       <%= t.user.email %>

        <!--ここから-->
        <% if t.image.attached? %>
            <%= image_tag t.image, size: '100x100'%>
        <% end %>

        <!--ここまで-->

     <% if user_signed_in? %>
      <% if current_user.already_liked?(t) %>
          <%= button_to tweet_like_path(id: t.id, tweet_id: t.id), method: :delete do %>
           <i class="fas fa-heart"></i><%= t.likes.count %>
      <% end %>
      <% else %>
          <%= button_to tweet_likes_path(id: t.id, tweet_id: t.id), method: :post do %>
            <i class="far fa-heart"></i><%= t.likes.count %>
      <% end %>
      <% end %>
  <% else %>
       
        <i class="far fa-heart"></i><%= t.likes.count %>
        
    <% end %>
        <%= t.created_at %>
        <%= link_to "詳細", tweet_path(t.id) %>
        <%= link_to "削除", tweet_path(t.id), method: :delete %>
      </div>
    </div>
    <% if t.user.image.attached? %>
      <%= image_tag  t.user.image, size: '50x50'%>
      <%= link_to t.user.name, user_path(t.user.id) %> 
    <% end %>
 </div>
<% end %>

<!--ここから-->
<h3>投稿を検索</h3>
 <%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>
<!--ここまで-->
<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
    <% end %>
    <%= submit_tag '検索' %>
<% end %>
<%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'タグを追加' %>
<% end %>

<%= link_to "新規投稿へ", new_tweet_path %>

